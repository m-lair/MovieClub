{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "type": "commonjs",
  "scripts": {
    "serve": "firebase emulators:start --project=movieclub-93714 --only auth,database,firestore,functions",
    "exec": "firebase emulators:exec --project=movieclub-93714 \"npm run test\"",
    "stop": "npx kill-port 8080 9000 9099",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register --reporter spec \"test/**/*.test.js\""
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "dotenv": "^16.4.5",
    "firebase-admin": "^12.4.0",
    "firebase-functions": "^5.1.1",
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/chai": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mocha": "^10.0.8",
    "@types/node": "^10.17.60",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "chai": "^5.1.1",
    "eslint": "^9.11.1",
    "firebase-functions-test": "^3.3.0",
    "firebase-tools": "^13.16.0",
    "jsdom-global": "^3.0.2",
    "tsconfig-paths": "^4.2.0",
    "mocha": "^10.7.3",
    "sinon": "^19.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "_moduleAliases": {
    "src": "./src",
    "index": "src/index",
    "firestore": "src/utilities/firestore",
    "helpers": "src/utilities/helpers",
    "mocks": "./test/mocks",
    "test": "./test"
  },
  "private": true
}
