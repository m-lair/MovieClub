{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --project=movieclub-93714 --only auth,database,firestore,functions",
    "exec": "firebase emulators:exec --project=movieclub-93714 \"npm run test\"",
    "stop": "npx kill-port 8080 9000 9099",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha --reporter spec \"test/**/*.test.js\""
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "dotenv": "^16.4.5",
    "firebase-admin": "^12.4.0",
    "firebase-functions": "^6.0.1",
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "@babel/parser": "^7.25.6",
    "@babel/types": "^7.25.6",
    "@types/form-data": "^2.2.1",
    "chai": "^5.1.1",
    "firebase-functions-test": "^3.3.0",
    "firebase-tools": "^13.20.0",
    "form-data": "^4.0.0",
    "mocha": "^10.7.3",
    "sinon": "^19.0.2",
    "undici": "^6.19.8"
  },
  "_moduleAliases": {
    "index": "./index",
    "src": "./src",
    "firestore": "./src/firestore",
    "utilities": "./src/utilities",
    "mocks": "./test/mocks",
    "test": "./test"
  },
  "private": true
}
